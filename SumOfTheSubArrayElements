public class SumOfTheSubArrayElements {
    public static void main(String[] args)
    {
        int[] arr={5,9,1,8,7};
        int n=arr.length;
        int ans=0;
        int sl=3;
        for(int i=0;i<n-sl+1;i++)
        {
            int j=i+sl-1;
            int temp=0;
            for(int k=i;k<=j;k++)
            {
                temp+=arr[k];
            }
            ans=Math.max(ans,temp);
        }
        System.out.println(ans);
    }
}
